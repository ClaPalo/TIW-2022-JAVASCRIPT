<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
	<display-name>Album-Gallery</display-name>
	<context-param>
    	<param-name>dbUrl</param-name>
   		<param-value>jdbc:mysql://localhost:3306/image_gallery?serverTimezone=UTC</param-value>
  	</context-param>
  	<context-param>
   		<param-name>dbUser</param-name>
   		<param-value>root</param-value>
  	</context-param>
  	<context-param>
		<param-name>dbPassword</param-name>
		<param-value>My06p6muf2</param-value>
	</context-param>
	<context-param>
		<param-name>dbDriver</param-name>
		<param-value>com.mysql.cj.jdbc.Driver</param-value>
	</context-param>
	<filter>
		<filter-name>NoCacher</filter-name>
		<filter-class>it.polimi.tiw.filters.NoCacher</filter-class>
	</filter>
	<filter>
		<filter-name>LoginChecker</filter-name>
		<filter-class>it.polimi.tiw.filters.LoginChecker</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>NoCacher</filter-name>
		<url-pattern>/Home.html</url-pattern>
		<url-pattern>/image_gallery.js</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>LoginChecker</filter-name>
		<url-pattern>/Home.html</url-pattern>
		<url-pattern>/GetAlbums</url-pattern>
		<url-pattern>/GetAlbumInfo</url-pattern>
		<url-pattern>/GetAlbumImages</url-pattern>
		<url-pattern>/GetComments</url-pattern>
		<url-pattern>/SubmitComment</url-pattern>
		<url-pattern>/OrderAlbums</url-pattern>
		<url-pattern>/GetImages</url-pattern>
	</filter-mapping>
	<welcome-file-list>
   		<welcome-file>index.html</welcome-file>
  	</welcome-file-list>
</web-app>